	repeat
		inc(vlCnt);
		vlBuf[vlCnt] := ((vlInt MOD 10) + 48) as char;
		vlInt := vlInt  div  10;
	until (vlInt = 0);
	ParStr.Length := vlCnt;
	vlCnt2 := 1;
	while vlCnt > 0 do begin
		ParStr[vlCnt2] := vlBuf[vlCnt];
		inc(vlCnt2);
		dec(vlCnt);
	end;
end;


