procedure Concat(var ParStr:string;const ParAt:string);
var
    vlCnt    : byte;
    vlLength : byte;
    vlDest   : byte;
begin
        vlCnt    := 1;
        vlDest   := ParStr.Length;
        vlLength := ParAt.Length;
	while (vlLength > 0) do begin
                inc vlDest;
                ParStr[vlDest] := ParAt[vlCnt];
                inc vlCnt;
                dec vlLength;
   	end;
        ParStr.Length := vlDest;
end;


